<view>
    <i-panel title="登录">
        <i-input value="{{ username }}" bind:change="handleUsernameInput" type="text" maxlength="30" title="用户名"/>
        <i-input value="{{ pwd }}" bind:change="handlePwdInput"  type="password" maxlength="30" title="密码"/>
    </i-panel>
    <i-button type="primary" bind:click="handleClick">登录</i-button>
    <i-button type="primary" bind:click="handleClickSignUp">注册</i-button>
</view>
<i-toast id="toast" />