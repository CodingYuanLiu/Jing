<view class="top-tab flex-wrp flex-tab ">
    <view class="toptab flex-item {{currentNavtab==idx ? 'active' : ''}}" wx:for="{{navTab}}" wx:for-index="idx" wx:for-item="itemName" data-idx="{{idx}}" bindtap="switchTab">
        {{itemName}}
    </view>
</view>
<scroll-view scroll-y="true" class="container discovery withtab" bindscrolltoupper="upper" bindscrolltolower="lower" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
    <view class="ctnt0" hidden="{{currentNavtab==0 ? '' : true}}">
        <!-- <swiper class="activity" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
            <block wx:for="{{imgUrls}}">
                <swiper-item>
                    <image src="{{item}}" class="slide-image" width="355" height="155" />
                </swiper-item>
            </block>
        </swiper> -->

        <block wx:for="{{feed}}" wx:for-index="idx" wx:for-item="item" data-idx="{{idx}}">
            <view class="feed-item">
                <view class="feed-source">
                    <a class="">
                        <!-- <view class="avatar">
                            <image src="{{item.feed_source_img}}"></image>
                        </view> -->
                        <!-- <text>{{item.feed_source_name}} · </text> -->
                        <text>{{item.sponsor_username}} · {{item.type}} · </text>
                        <text>{{item.create_time}}</text>
                    </a>
                </view>
                <view class="feed-content" bindtap="bindQueTap" data-id="{{item.act_id}}">
                    <view class="question">
                        <a class="question-link">
                            <text>【{{item.depart_time}}】 {{item.title}}</text>
                        </a>
                    </view>
                    <view class="answer-body">
                        <view  data-id="{{act_id}}">
                            <text class="answer-txt" aid="{{act_id}}">{{item.description}}</text>
                        </view>
                        <!-- <view>
                            <image src="{{item.feed_img}}"></image>
                        </view> -->
                        <view class="answer-actions">
                            <view class="like dot">
                                <a>👍 {{item.good_num}} </a>
                            </view>
                            <view class="comments dot">
                                <a>{{item.comments.length}} 评论 </a>
                            </view>
                            <!-- <view class="follow-it">
                                <a>{{item.comment_num}} 关注</a>
                            </view> -->
                        </view>
                    </view>
                </view>
            </view>
        </block>
    </view>
    <view class="ctnt1 placehold" hidden="{{currentNavtab==1 ? '' : true}}">
        <text>关注</text>
    </view>
    <view class="ctnt2 placehold" hidden="{{currentNavtab==2 ? '' : true}}">
        <text>我的</text>
    </view>
</scroll-view>