    </view>
    <view class="ctnt0" hidden="{{currentNavtab==1 ? '' : true}}">
        <view class="unread">
            <text>{{message.unread}} 条未读</text>
            <image src="../../images/allread.png"></image>
        </view>
        <block wx:for="{{message.content}}" wx:for-index="idx" wx:for-item="item" data-idx="{{idx}}">
            <view class="chat-item flex-wrp">
