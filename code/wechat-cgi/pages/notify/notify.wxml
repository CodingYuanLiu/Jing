                    <image src="{{item.avatar}}"></image>
                </view>
                <view class="chat-content flex-item">
                    <view class="chat-source">
                        <text class="chatmate">{{item.nickname}}</text>
                        <text class="lasttime">{{item.lasttime}}</text>
                    </view>
                    <text class="chat-txt">{{item.lasttext}}</text>
                </view>
            </view>
        </block>

