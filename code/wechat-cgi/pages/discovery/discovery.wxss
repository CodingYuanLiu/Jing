/**index.wxss**/

.container {
    height: 1500rpx;
}

.container .search {
    width: 735rpx;
    height: 65rpx;
    padding: 12.5rpx 0 12.5rpx 15rpx;
    background: #1296db;
}

.container .search-left {
    flex: 8;
    background: #1b9eeb;
    text-align: left;
}

.container .search-left input {
    display: inline-block;
    height: 65rpx;
    font-size: 26rpx;
}

.search-placeholder {
    color: #8ccefd;
    line-height: 20rpx;
}

.container .search .search-left image {
    display: inline-block;
    width: 35rpx;
    height: 35rpx;
    padding: 15rpx 15rpx 15rpx 20rpx;
}

.container .search .search-right {
    flex: 1;
}

.container .search .search-right image {
    width: 45rpx;
    height: 45rpx;
    padding: 10rpx;
}

.container {
    padding: 0;
    font-size: 14rpx;
    background: #f0f4f3;
    color: #000;
}

