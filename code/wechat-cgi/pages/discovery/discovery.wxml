<scroll-view scroll-y="true" class="container" bindscrolltoupper="upper" upper-threshold="10" lower-threshold="5" bindscrolltolower="lower" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
    <view class="search flex-wrp">
        <view class="search-left flex-item">
            <image src="../../images/search.png"></image>
            <input placeholder="搜索活动, 商家或用户" placeholder-class="search-placeholder" />
        </view>
        <view class="search-right flex-item" bindtap="upper">
            <image src="../../images/lighting.png"></image>
        </view>
    </view>
    <view >
        <block wx:for="{{category}}" wx:for-index="idx" wx:for-item="item" data-idx="{{idx}}">
            <view class="flex-wrp" style="display: block; width: 100%; float: top">
                <block wx:for="{{item.r}}" wx:for-index="idx" wx:for-item="item_r" data-idx="{{idx}}">
                    <view class="feed-item" style="width:17%; float: left">
                        <view class="feed-source">
                            <a class="">
                                <view class="avatar">
                                    <image src="{{item_r.icon}}"></image>
                                </view>
                                <text>{{item_r.name}}</text>
                            </a>
                        </view>
                    </view>
                </block>
            </view>
        </block>
    </view>
